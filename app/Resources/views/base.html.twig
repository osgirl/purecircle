                </div>
            </aside>
            <!--sidebar end-->
            <section id="main-content">
                <section class="wrapper site-min-height">
                    <!-- page start|| this is here for the flash messages-->
                    {% for messages in app.session.flashbag.all %}
                        {% for message in messages%}
